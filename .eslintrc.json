{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint", "import"],
  "extends": ["plugin:@typescript-eslint/recommended-type-checked", "prettier"],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": ["external", "builtin", "internal", "index", "type", "parent", "sibling"],
        "pathGroups": [
          { "pattern": "@/hooks/*", "group": "internal", "position": "before" },
          { "pattern": "@/components/*", "group": "internal" },
          { "pattern": "@/reduxjs/**/*", "group": "internal" },
          { "pattern": "@/constants/*", "group": "internal" },
          { "pattern": "@/types", "group": "internal", "position": "after" },
          { "pattern": "../components/*", "group": "parent" },
          { "pattern": "./components/*", "group": "sibling", "position": "before" },
          { "pattern": "./*Styles.ts", "group": "sibling", "position": "after" }
        ]
      }
    ],
    "@typescript-eslint/ban-ts-comment": 0,
    "no-unused-vars": "off"
  }
}
